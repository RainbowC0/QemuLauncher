<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:title="@string/settings">
	<PreferenceCategory
		android:title="界面">
		<CheckBoxPreference
			android:key="is_dark"
			android:title="暗主题"
			android:summary="重启应用生效"/>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="配置">
		<cn.qemu.launcher.preference.DirPreference
			android:key="sh_path"
			android:title="配置文件路径"
			android:dialogTitle="文件路径"/>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="@string/log">
		<EditTextPreference
			android:key="logcat_params"
			android:title="LogCat参数"
			android:dialogLayout="@layout/conf_text"/>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="运行">
		<CheckBoxPreference
			android:key="is_su"
			android:title="ROOT用户运行"
			android:summaryOff="当前用户:普通"
			android:summaryOn="当前用户:ROOT"/>
		<!--cn.qemu.launcher.preference.DirPreference
			android:dependency="is_su"
			android:key="qemu_path"
			android:title="QEMU文件路径"
			android:dialogTitle="文件路径"/-->
		<cn.qemu.launcher.preference.DirPreference
			android:key="bios_path"
			android:title="BIOS目录"
			android:dialogTitle="BIOS目录"/>
	</PreferenceCategory>
</PreferenceScreen>

